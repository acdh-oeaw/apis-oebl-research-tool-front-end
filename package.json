{
	"name": "@acdh-oeaw/irs",
	"private": true,
	"license": "MIT",
	"engines": {
		"node": "18.x",
		"npm": "9.x"
	},
	"packageManager": "npm@9.5.1",
	"scripts": {
		"build": "run-s generate:api-client:prod build:client build:server",
		"build:client": "vue-cli-service build",
		"build:server": "tsup-node --clean --format esm --target es2022 --out-dir ./dist/server/ --sourcemap --tsconfig ./server/tsconfig.json ./server/index.ts",
		"dev": "run-p dev:client dev:server",
		"dev:client": "vue-cli-service serve",
		"dev:server": "dotenv -c development -- tsup-node --clean --format esm --target es2021 --out-dir ./dist/server/ --sourcemap --tsconfig ./server/tsconfig.json --watch ./server/index.ts",
		"format:check": "prettier . --cache --check --ignore-path ./.gitignore",
		"format:fix": "npm run format:check -- --write",
		"generate:api-client": "tsx ./scripts/generate-api-client.ts",
		"generate:api-client:dev": "dotenv -c development -- npm run generate:api-client",
		"generate:api-client:prod": "dotenv -c production -- npm run generate:api-client",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache --ext .js,.ts,.vue --ignore-path ./.gitignore",
		"lint:code:fix": "npm run lint:code:check -- --fix",
		"lint:styles:check": "stylelint \"./**/*.@(css|vue)\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "npm run lint:styles:check -- --fix",
		"prepare": "run-s setup generate:api-client:prod",
		"setup": "simple-git-hooks || exit 0",
		"start": "dotenv -c production -- node ./dist/server/index.mjs",
		"test": "dotenv -c test -- node --loader tsx --test --test-reporter spec ./server/**/*.test.ts",
		"test:e2e": "playwright test",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:prod": "dotenv -v E2E_TEST_BUILD=\"production\" -- run-s build test:e2e",
		"test:e2e:ui": "playwright test --ui",
		"types:check": "vue-tsc --noEmit",
		"validate": "run-p format:check lint:check types:check test test:e2e"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.1.4",
		"@babel/polyfill": "^7.12.1",
		"@mdi/font": "^7.2.96",
		"@tiptap/extension-highlight": "^2.0.3",
		"@tiptap/starter-kit": "^2.0.3",
		"@tiptap/vue-2": "^2.0.3",
		"compression": "^1.7.4",
		"core-js": "^3.31.1",
		"cors": "^2.8.5",
		"date-fns": "^2.30.0",
		"dexie": "^3.2.4",
		"express": "^4.18.2",
		"file-dialog": "^0.0.8",
		"human-readable-numbers": "^0.9.5",
		"lodash": "^4.17.20",
		"neat-csv": "^5.2.0",
		"pretty-file-icons": "^2.2.1",
		"prosemirror-model": "^1.19.2",
		"prosemirror-state": "^1.4.3",
		"prosemirror-tables": "^0.9.5",
		"prosemirror-utils": "^0.9.6",
		"prosemirror-view": "^1.31.5",
		"socket.io": "^3.1.1",
		"socket.io-client": "^3.1.1",
		"tippy.js": "^6.3.1",
		"uuid": "^8.3.2",
		"vue": "^2.7.14",
		"vue-class-component": "^7.2.6",
		"vue-property-decorator": "^9.1.2",
		"vue-router": "^3.6.5",
		"vue-virtual-table": "^0.2.22",
		"vuedraggable": "^2.24.3",
		"vuetify": "^2.6.15",
		"xlsx": "^0.18.5",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^1.0.0",
		"@acdh-oeaw/eslint-config-node": "^1.0.0",
		"@acdh-oeaw/eslint-config-vue2": "^1.0.1",
		"@acdh-oeaw/prettier-config": "^1.0.1",
		"@acdh-oeaw/stylelint-config": "^1.0.5",
		"@acdh-oeaw/tsconfig": "^1.0.1",
		"@fontsource-variable/roboto-flex": "^5.0.4",
		"@playwright/test": "^1.35.1",
		"@types/compression": "^1.7.2",
		"@types/express": "^4.17.17",
		"@types/lodash": "^4.14.195",
		"@types/node": "^18.16.19",
		"@types/supertest": "^2.0.12",
		"@types/uuid": "^8.3.4",
		"@vue/cli-plugin-babel": "~5.0.8",
		"@vue/cli-plugin-router": "~5.0.8",
		"@vue/cli-plugin-typescript": "~5.0.8",
		"@vue/cli-service": "~5.0.8",
		"buffer": "^6.0.3",
		"dotenv-cli": "^7.2.1",
		"eslint": "^8.43.0",
		"lint-staged": "^13.2.2",
		"nock": "^13.3.1",
		"npm-run-all2": "^6.0.6",
		"openapi-typescript-codegen": "^0.25.0",
		"prettier": "^2.8.8",
		"process": "^0.11.10",
		"sass": "~1.32.13",
		"sass-loader": "^10.4.1",
		"schema-dts": "^1.1.2",
		"simple-git-hooks": "^2.8.1",
		"stream-browserify": "^3.0.0",
		"stylelint": "^15.10.1",
		"supertest": "^6.3.3",
		"tsup": "^7.1.0",
		"tsx": "^3.12.7",
		"typescript": "~5.1.6",
		"vue-cli-plugin-vuetify": "~2.5.8",
		"vue-tsc": "^1.8.4",
		"vuetify-loader": "^1.9.2",
		"vuetify2-component-types": "^2.6.8"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"eslintConfig": {
		"extends": [
			"@acdh-oeaw/eslint-config",
			"@acdh-oeaw/eslint-config-vue2"
		],
		"parserOptions": {
			"project": "./tsconfig.json"
		},
		"settings": {
			"import/resolver": {
				"typescript": {
					"project": "./tsconfig.json"
				}
			}
		},
		"overrides": [
			{
				"files": [
					"./server/**/*.ts"
				],
				"extends": "@acdh-oeaw/eslint-config-node",
				"parserOptions": {
					"project": "./server/tsconfig.json"
				},
				"settings": {
					"import/resolver": {
						"typescript": {
							"project": "./server/tsconfig.json"
						}
					}
				},
				"rules": {
					"n/no-missing-import": "off"
				}
			},
			{
				"files": [
					"./e2e/**/*.ts"
				],
				"parserOptions": {
					"project": "./e2e/tsconfig.json"
				},
				"settings": {
					"import/resolver": {
						"typescript": {
							"project": "./e2e/tsconfig.json"
						}
					}
				}
			},
			{
				"files": [
					"./*.config.js"
				],
				"rules": {
					"@typescript-eslint/no-var-requires": "off"
				}
			}
		]
	},
	"lint-staged": {
		"*.@(vue)": [
			"eslint --cache --fix",
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(js|ts)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(css|js|ts|vue)": "prettier --cache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config",
		"rules": {
			"selector-class-pattern": null
		}
	}
}
