{
	"name": "@acdh-oeaw/irs",
	"private": true,
	"license": "MIT",
	"engines": {
		"node": "16.x",
		"npm": "8.x"
	},
	"packageManager": "npm@8.19.4",
	"scripts": {
		"build": "run-s generate:api-client:prod build:client build:server",
		"build:client": "vue-cli-service build",
		"build:server": "tsc --outDir ./server/dist/ ./server/index.ts",
		"dev": "run-p dev:client dev:server",
		"dev:client": "vue-cli-service serve",
		"dev:server": "env-cmd --silent -f .env.local ts-node-dev --project ./server/tsconfig.json ./server/index.ts",
		"format:check": "prettier . --cache --check --ignore-path ./.gitignore",
		"format:fix": "npm run format:check -- --write",
		"generate:api-client": "ts-node ./scripts/get-api-spec.ts && openapi -i api-spec.json -o ./src/api --request ./src/service/request.ts && npm run pick-services WorkflowService ResearchService MeService",
		"generate:api-client:dev": "env-cmd --silent -f .env.development npm run generate:api-client",
		"generate:api-client:prod": "env-cmd --silent -f .env.production npm run generate:api-client",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache --ext .js,.ts,.vue --ignore-path ./.gitignore",
		"lint:code:fix": "npm run lint:code:check -- --fix",
		"lint:styles:check": "stylelint \"./**/*.@(css|vue)\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "npm run lint:styles:check -- --fix",
		"pick-services": "ts-node ./scripts/pick-services.ts",
		"prepare": "run-s setup generate:api-client:prod",
		"setup": "simple-git-hooks || exit 0",
		"start": "env-cmd --silent -f .env.local node ./server/dist/server/index.js",
		"test": "exit 0",
		"types:check": "vue-tsc --noEmit",
		"validate": "run-p format:check lint:check types:check test"
	},
	"dependencies": {
		"@babel/polyfill": "^7.12.1",
		"@mdi/font": "^3.6.95",
		"@tiptap/extension-highlight": "^2.0.0-beta.12",
		"@tiptap/starter-kit": "^2.0.0-beta.59",
		"@tiptap/vue-2": "^2.0.0-beta.29",
		"body-parser": "^1.20.2",
		"compression": "^1.7.4",
		"core-js": "^3.31.0",
		"cors": "^2.8.5",
		"date-fns": "^2.30.0",
		"dexie": "^3.2.4",
		"express": "^4.18.2",
		"file-dialog": "^0.0.8",
		"human-readable-numbers": "^0.9.5",
		"leader-line": "^1.0.5",
		"lodash": "^4.17.20",
		"neat-csv": "^5.2.0",
		"node-fetch": "^2.6.11",
		"pretty-file-icons": "^2.2.1",
		"prosemirror-model": "^1.14.2",
		"prosemirror-state": "^1.3.4",
		"prosemirror-tables": "^0.9.5",
		"prosemirror-utils": "^0.9.6",
		"prosemirror-view": "^1.18.7",
		"register-service-worker": "^1.7.1",
		"roboto-fontface": "*",
		"socket.io": "^3.1.1",
		"socket.io-client": "^3.1.1",
		"tippy.js": "^6.3.1",
		"tslib": "^2.5.3",
		"uuid": "^8.3.2",
		"vue": "^2.7.14",
		"vue-class-component": "^7.2.6",
		"vue-property-decorator": "^8.5.1",
		"vue-router": "^3.6.5",
		"vue-virtual-table": "^0.2.22",
		"vuedraggable": "^2.24.3",
		"vuetify": "^2.6.15",
		"xlsx": "^0.16.9"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^1.0.0",
		"@acdh-oeaw/eslint-config-node": "^1.0.0",
		"@acdh-oeaw/eslint-config-vue2": "^1.0.0",
		"@acdh-oeaw/prettier-config": "^1.0.1",
		"@acdh-oeaw/stylelint-config": "^1.0.3",
		"@acdh-oeaw/tsconfig": "^1.0.1",
		"@types/compression": "^1.7.0",
		"@types/express": "^4.17.17",
		"@types/lodash": "^4.14.195",
		"@types/node": "^16.18.36",
		"@types/node-fetch": "^2.5.10",
		"@types/uuid": "^8.3.0",
		"@vue/cli-plugin-babel": "~4.5.0",
		"@vue/cli-plugin-router": "~4.5.0",
		"@vue/cli-plugin-typescript": "~4.5.0",
		"@vue/cli-service": "~4.5.0",
		"env-cmd": "^10.1.0",
		"eslint": "^8.43.0",
		"lint-staged": "^13.2.2",
		"nodemon": "^2.0.7",
		"npm-run-all2": "^6.0.5",
		"openapi-typescript-codegen": "^0.9.3",
		"prettier": "^2.8.8",
		"prosemirror-dev-tools": "^4.0.0",
		"sass": "^1.32.4",
		"sass-loader": "^10.1.1",
		"schema-dts": "^0.8.2",
		"simple-git-hooks": "^2.8.1",
		"skeleton-loader": "^2.0.0",
		"stylelint": "^15.9.0",
		"stylelint-stylus": "^0.18.0",
		"stylus": "^0.54.7",
		"stylus-loader": "^3.0.2",
		"ts-node": "^9.1.1",
		"ts-node-dev": "^1.1.6",
		"typescript": "~5.0.4",
		"vue-cli-plugin-vuetify": "~2.0.7",
		"vue-template-compiler": "^2.7.14",
		"vue-tsc": "^1.8.3"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"eslintConfig": {
		"extends": [
			"@acdh-oeaw/eslint-config",
			"@acdh-oeaw/eslint-config-vue2"
		],
		"overrides": [
			{
				"files": [
					"./server/**/*.ts"
				],
				"extends": "@acdh-oeaw/eslint-config-node"
			}
		]
	},
	"lint-staged": {
		"*.@(vue)": [
			"eslint --cache --fix",
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(js|ts)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(css|js|ts|vue)": "prettier --cache --ignore-unknown --write"
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": [
			"stylelint-stylus/standard",
			"@acdh-oeaw/stylelint-config"
		]
	},
	"volta": {
		"node": "16.20.1"
	}
}
