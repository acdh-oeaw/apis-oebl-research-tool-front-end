{
	"compilerOptions": {
		"esModuleInterop": true,
		"isolatedModules": true,
		"lib": ["es2021"],
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "es2021"
	},
	"include": ["./server/**/*.ts"],
	"exclude": ["dist", "node_modules"]
}
