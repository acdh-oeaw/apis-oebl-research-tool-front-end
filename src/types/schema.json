{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Author": {
            "properties": {
                "email": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "role": {
                    "$ref": "#/definitions/Role"
                },
                "userId": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "Editor": {
            "properties": {
                "email": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "profilePicture": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "role": {
                    "$ref": "#/definitions/Role"
                },
                "userId": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "Issue": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "publicationDate": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "IssueLemma": {
            "properties": {
                "author": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/Author"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "characterCount": {
                    "type": "number"
                },
                "editor": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/Editor"
                        },
                        {
                            "type": "null"
                        }
                    ]
                },
                "entityCount": {
                    "type": "number"
                },
                "labels": {
                    "items": {
                        "$ref": "#/definitions/Label"
                    },
                    "type": "array"
                },
                "lemma": {
                    "$ref": "#/definitions/Lemma"
                },
                "notes": {
                    "items": {
                        "$ref": "#/definitions/LemmaNote"
                    },
                    "type": "array"
                },
                "status": {
                    "$ref": "#/definitions/LemmaStatus"
                }
            },
            "type": "object"
        },
        "Label": {
            "properties": {
                "color": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "Lemma": {
            "additionalProperties": {
                "type": "string"
            },
            "properties": {
                "dateOfBirth": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "dateOfDeath": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "firstName": {
                    "type": [
                        "string",
                        "null"
                    ]
                },
                "lastName": {
                    "type": [
                        "string",
                        "null"
                    ]
                }
            },
            "type": "object"
        },
        "LemmaNote": {
            "properties": {
                "date": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                },
                "user": {
                    "$ref": "#/definitions/User"
                }
            },
            "type": "object"
        },
        "LemmaStatus": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "enum": [
                        "ausgeschrieben",
                        "autordurchsicht",
                        "eingelangt",
                        "endredaktion",
                        "gruppenredaktion",
                        "verteilt",
                        "zugesagt"
                    ],
                    "type": "string"
                },
                "order": {
                    "type": "number"
                }
            },
            "type": "object"
        },
        "Pick<Author,\"userId\">": {
            "description": "From T, pick a set of properties whose keys are in the union K",
            "properties": {
                "userId": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "Pick<Editor,\"userId\">": {
            "description": "From T, pick a set of properties whose keys are in the union K",
            "properties": {
                "userId": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "Pick<LemmaNote,\"text\">": {
            "description": "From T, pick a set of properties whose keys are in the union K",
            "properties": {
                "text": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "Pick<LemmaStatus,\"id\">": {
            "description": "From T, pick a set of properties whose keys are in the union K",
            "properties": {
                "id": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "Role": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "User": {
            "properties": {
                "email": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "role": {
                    "$ref": "#/definitions/Role"
                },
                "userId": {
                    "type": "string"
                }
            },
            "type": "object"
        }
    },
    "properties": {
        "getAuthors": {
            "description": "GET /authors",
            "items": {
                "$ref": "#/definitions/Author"
            },
            "type": "array"
        },
        "getEditors": {
            "description": "GET /editors",
            "items": {
                "$ref": "#/definitions/Editor"
            },
            "type": "array"
        },
        "getIssues": {
            "description": "GET /issues",
            "items": {
                "$ref": "#/definitions/Issue"
            },
            "type": "array"
        },
        "getLemmata": {
            "description": "GET /issues/:issue_id/lemma",
            "items": {
                "$ref": "#/definitions/IssueLemma"
            },
            "type": "array"
        },
        "getStatuses": {
            "description": "GET /lemma-status",
            "items": {
                "$ref": "#/definitions/LemmaStatus"
            },
            "type": "array"
        },
        "postLemmaComment": {
            "$ref": "#/definitions/Pick<LemmaNote,\"text\">",
            "description": "POST /lemmas/:id/note"
        },
        "putLemmaAuthor": {
            "$ref": "#/definitions/Pick<Author,\"userId\">",
            "description": "PUT /lemmas/:id/author"
        },
        "putLemmaEditor": {
            "$ref": "#/definitions/Pick<Editor,\"userId\">",
            "description": "PUT /lemmas/:id/assignee"
        },
        "putLemmaStatus": {
            "$ref": "#/definitions/Pick<LemmaStatus,\"id\">",
            "description": "PUT /lemmas/:id/status"
        }
    },
    "type": "object"
}

